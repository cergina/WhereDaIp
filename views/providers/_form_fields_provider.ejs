<h5 class="display-5 mt-4">Information relevant, to this system only</h5>
<!-- popisky systemove -->
<div class="form-group">
    <label for="name">Name of the service in this system</label>
    <input required value="<%= provider.name %>" type="text" name="name" id="name" class="form-control">
</div>
<div class="form-group">
    <label for="description">Your own description and notes on the service</label>
    <textarea name="description" id="description" class="form-control"><%= provider.description %></textarea>
</div>


<h5 class="display-5 mt-4">Service's request fields (see service's documentation)</h5>
<!-- informacie potrebne k uspesnemu odoslaniu poziadavky -->
<div class="form-group">
    <label for="api-url">Service's API url</label>
    <input required value="" placeholder="http://serviceurl.com/json/" type="text" name="api-url" id="api-url" class="form-control">
</div>
<div class="form-group">
    <label for="api-free">Is the service free?</label>
    <select id="api-free" class="form-select form-select-sm" required aria-label=".form-select-sm example">
        <option selected value="1">Yes</option>
        <option value="2">No</option>
    </select>
</div>
<div class="form-group">
    <label for="api-method">Request method</label>
    <select id="api-method" class="form-select form-select-sm" required aria-label=".form-select-sm example">
        <option selected value="1">GET + param in link</option>
        <option value="2">GET + ip after service url</option>
        <option value="3">POST + body json</option>
    </select>
</div>
<div class="form-group">
    <label for="api-req-param-ip">Name for parameter "IP address"</label>
    <input required value="" type="text" name="api-req-param-ip" id="api-req-param-ip" class="form-control">
</div>
<div class="form-group">
    <label for="api-req-param-ip">Name for parameter "authentication" (if service not free)</label>
    <input required value="" type="text" name="api-req-param-ip" id="api-req-param-ip" class="form-control">
</div>


<h5 class="display-5 mt-4">Service's response fields (see service's documentation)</h5>
<!-- to co budeme spracovavat ako odpoved od sluzby -->
<div class="form-group">
    <label for="response-format">Response format type</label>
    <select id="response-format" class="form-select form-select-sm" required aria-label=".form-select-sm example">
        <option selected value="1">JSON</option>
        <option value="2">XML</option>
    </select>
</div>
<div class="form-group">
    <label for="api-resp-success-path">Path to "was succesfull request"</label>
    <input required value="" placeholder="success" type="text" name="api-resp-success-path" id="api-resp-success-path" class="form-control">
</div>
<div class="form-group">
    <label for="api-resp-continent-path">Path to "continent"</label>
    <input required value="" placeholder="continent" type="text" name="api-resp-continent-path" id="api-resp-continent-path" class="form-control">
</div>
<div class="form-group">
